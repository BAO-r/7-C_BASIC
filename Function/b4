#include <stdio.h>
#include <stdlib.h>
#include <math.h>

void nhap(int a[][100],int n,int m)
{
    int i,j;
    for(i=0; i<n; i++)
    {
        for(j=0; j<m; j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
}

void inMang(int a[][100],int n,int m)
{
    int i,j;
    for(i=0; i<n; i++)
    {
        printf("|");
        for(j=0; j<m; j++)
        {
            printf("%4d ",a[i][j]);
        }
        printf("|\n");
    }
    printf("\n");
}

void tong_matrix()
{
    int a[100][100];
    int b[100][100];
    int c[100][100];
    int i,j,n,m;
    printf("Nhap cap cua 2 ma tran :");
    scanf("%d %d",&n,&m);
    printf("Nhap phan tu cua ma tran 1 cap %dx%d:\n",n,m);
    nhap(a,n,m);
    printf("Nhap phan tu cua ma tran 2 cap %dx%d:\n",n,m);
    nhap(b,n,m);
    for(i=0; i<n; i++)
    {
        for(j=0; j<m; j++)
        {
            c[i][j]=a[i][j]+b[i][j];
        }
    }
    printf("Tong 2 ma tran :\n");
    inMang(a,n,m);
    printf("+\n\n");
    inMang(b,n,m);
    printf("=\n\n");
    inMang(c,n,m);
}

void tich_matrix()
{
    int a[100][100];
    int b[100][100];
    int c[100][100];
    int i,j,n,m,s,d,p;
    printf("Nhap cap ma tran thu nhat :");
    scanf("%d %d",&n,&m);
    printf("Nhap phan tu cua ma tran 1 cap %dx%d:\n",n,m);
    nhap(a,n,m);
    printf("Nhap cap ma tran thu hai :");
    scanf("%d %d",&s,&d);
    printf("Nhap phan tu cua ma tran 2 cap %dx%d:\n",s,d);
    nhap(b,s,d);
    for(i=0; i<n; i++)
    {
        for(j=0; j<d; j++)
        {
            for(p=0; p<m; p++)
            {
                c[i][j]+=(a[i][p]*b[p][j]);
            }
        }
    }
    printf("Tich 2 ma tran :\n");
    inMang(a,n,m);
    printf("*\n\n");
    inMang(b,s,d);
    printf("=\n\n");
    inMang(c,n,d);
}

int main()
{
    int t;
    printf("Nhap 1 de tinh tong 2 ma tran.\nNhap 2 de tinh tich 2 ma tran.\nNhap 0 de stop!\n");
    printf("================================================|\n");
    do
    {
        printf("Lua chon: ");
        scanf("%d",&t);
        switch(t)
        {
        case 1:
            tong_matrix();
            break;
        case 2:
            tich_matrix();
            break;
        }
    }
    while(t!=0);
    return 0;
}
