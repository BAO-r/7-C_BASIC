#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <string.h>
#include <malloc.h>

void nhap(int *a,int n)
{
    int i;
    for(i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }
}

void doi_cho(int *a,int n,int i)
{
    int t;
    t=a[n];
    a[n]=a[i];
    a[i]=t;
}

void so_lon(int *a,int n)
{
    int i,k,max=a[0];
    for(i=0; i<n; i++)
    {
        if(a[i]>max)
        {
            k=i;
            max=a[i];
        }
    }
    printf("So lon nhat la %d tai vi tri thu %d\n",max,k+1);
}

void so_be(int *a,int n)
{
    int i,k,min=a[0];
    for(i=0; i<n; i++)
    {
        if(a[i]<min)
        {
            k=i;
            min=a[i];
        }
    }
    printf("So be nhat la %d tai vi tri thu %d\n",min,k+1);
}

int main()
{
    //freopen("C:\\New folder\\input.txt","r",stdin);
    int a[10000];
    int n;
    printf("Muon nhap bao nhieu so?\n");
    scanf("%d",&n);
    printf("Vay thi nhap di: \n");
    nhap(a,n);
    printf("===================================\n");
    so_lon(a,n);
    so_be(a,n);
    return 0;
}
