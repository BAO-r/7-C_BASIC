#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <string.h>
#include <malloc.h>

void nhap(int a[][100],int n,int m)
{
    int i,j;
    for(i=0; i<n; i++)
    {
        for(j=0; j<m; j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
}

void inMang(char *fp,int a[][100],int n,int m)
{
    int i,j;
    for(i=0; i<n; i++)
    {
        printf("|");
        fprintf(fp,"%c",'|');
        for(j=0; j<m; j++)
        {
            printf("%4d ",a[i][j]);
            fprintf(fp,"%4d",a[i][j]);
        }
        printf("|\n");
        fprintf(fp,"%c\n",'|');
    }
    printf("\n");
}

void tong_matrix(char *fp,int a[][100],int b[][100],int c[][100],int n,int m)
{
    int i,j;
    for(i=0; i<n; i++)
    {
        for(j=0; j<m; j++)
        {
            c[i][j]=a[i][j]+b[i][j];
            //fwrite(&c[i][j],sizeof(int),1,fp);
        }
    }
    inMang(fp,a,n,m);
    printf("+\n");
    fprintf(fp,"%c\n",'+');
    inMang(fp,b,n,m);
    printf("=\n");
    fprintf(fp,"%c\n",'=');
    inMang(fp,c,n,m);
}

void write_text(int *file_path,int a[],int n)
{
    FILE *fp = fopen(file_path,"wt");
    if(fp!=NULL)
    {
        int i;
        for(i=0; i<n; i++)
        {
            fprintf(fp,"%d ",i);
        }
    }
    fclose(fp);
}

void read_text(int *file_path)
{
    FILE *fp = fopen(file_path,"rt");
    int line[1005];
    if(fp!=NULL)
    {
        while(!feof(fp))
        {
            fgets(line, sizeof(line),fp);
            printf("%d ",line);
        }
    }
    fclose(fp);
}

int main()
{
    char *fp="C:\\New folder\\Cong_MT.C";
    int a[100][100];
    int b[100][100];
    int c[100][100];
    int n,m;
    FILE *fp_1=fopen(fp,"wt");
    printf("Nhap cap ma tran N x M:");
    scanf("%d %d",&n,&m);
    printf("Nhap ma tran cap %dx%d thu 1 :\n",n,m);
    nhap(a,n,m);
    printf("Nhap ma tran cap %dx%d thu 2 :\n",n,m);
    nhap(b,n,m);
    printf("================================\n");
    printf("Tong 2 ma tran la :\n");
    tong_matrix(fp_1,a,b,c,n,m);
    fclose(fp_1);
    return 0;
}
